{
  "name": "nmind-companion",
  "version": "1.1.0",
  "description": "nmind Companion browser extension",
  "main": "index.js",
  "scripts": {
    "clean": "gulp clean",
    "chrome-clean": "cross-env TARGET=chrome gulp clean",
    "firefox-clean": "cross-env TARGET=firefox gulp clean",
    "chrome-build": "cross-env TARGET=chrome gulp build",
    "firefox-build": "cross-env TARGET=firefox gulp build",
    "build": "cross-env NODE_ENV=production npm run chrome-build && cross-env NODE_ENV=production npm run firefox-build",
    "chrome-watch": "cross-env TARGET=chrome gulp watch",
    "firefox-watch": "cross-env TARGET=firefox gulp watch",
    "chrome-package": "cross-env NODE_ENV=production cross-env TARGET=chrome gulp package",
    "firefox-package": "cross-env NODE_ENV=production cross-env TARGET=firefox gulp package",
    "package": "npm run chrome-package && npm run firefox-package",
    "lint-gulp": "eslint gulpfile.js",
    "typecheck": "tsc -p tsconfig.json"
  },
  "private": true,
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nmind-io/Nmind-Companion-Browser-extension"
  },
  "bugs": {
    "url": "https://github.com/nmind-io/Nmind-Companion-Browser-extension/issues"
  },
  "homepage": "https://github.com/nmind-io/Nmind-Companion-Browser-extension#readme",
  "author": "nmind.io <os-projects@nmind.io>",
  "license": "MIT License",
