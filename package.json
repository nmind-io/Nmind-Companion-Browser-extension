    "gulp-merge-json": "^1.3.1",
    "gulp-plumber": "^1.2.1",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-tap": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-zip": "^5.0.1",
    "merge-stream": "^2.0.0",
