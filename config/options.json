{
    "browserify": {
        "debug": "${__context.isDevelopment}",
        "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
        ],
        "standalone": "$",
        "cache": {},
        "packageCache": {}
    },
    "babelify": {
        "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
        ],
        "presets": [
            ["@babel/preset-env", { "modules": "commonjs" }],
            ["@babel/preset-react", {}],
            ["@babel/preset-typescript", { "isTSX": true, "allExtensions": true }]
        ]
    },
    "terser": {
        "ecma": 2017,
        "compress": true,
        "mangle": true,
        "format": {
            "ascii_only" : true
        }
    },
    "runner": {
        "browserConsole": false,
        "keepProfileChanges": false,
        "noInput": true,
        "noReload": false,
        "preInstall": false,
        "startUrl": [
            "https://nmind.io/companion.html",
            "about:devtools-toolbox?type=extension&id=nmind-companion%40nmind.io"
        ]
    }
}