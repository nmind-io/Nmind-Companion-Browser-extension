{
    "staticStyles": {
        "source": "/assets/styles/**/*.css",
        "target": "/assets/styles"
    },
    "staticHtml": {
        "source": "/**/*.html",
        "target": ""
    },
    "staticLib": {
        "source": "/lib/**/*",
        "target": "/lib"
    },
    "locales": {
        "source": "/_locales/**/*",
        "target": "/_locales"
    },
    "publicFile": {
        "source": [
            "/public/**/*",
            "!/public/**/*.js"
        ],
        "target": "/public"
    },
    "styles": {
        "source": [
            "${__paths.src}/assets/styles/**/*.scss",
            "${__paths.src}/assets/styles/**/*.sass",
            "${__paths.src}/assets/styles/**/*.less",
            "!${__paths.src}/assets/styles/**/*.css"
        ],
        "target": "${__paths.target}/assets/styles"
    },
    "scripts": {
        "source": [
            "${__paths.src}/**/*.js",
            "${__paths.src}/**/*.jsx",
            "${__paths.src}/**/*.ts",
            "${__paths.src}/**/*.tsx",
            "!${__paths.src}/shared/**",
            "!${__paths.src}/background/**",
            "!${__paths.src}/public/**",
            "!${__paths.src}/popup/**",
            "!${__paths.src}/settings/**",
            "!${__paths.src}/content/**",
            "!${__paths.src}/assets/**",
            "!${__paths.src}/_locales/**",
            "!${__paths.src}/lib/**"
        ],
        "target": "${__paths.target}"
    },
    "bundles": {
        "shared": {
            "entry": "./src/shared/index.ts",
            "watch": [
                "./src/shared/**/*.{js,jsx,ts,tsx}"
            ],
            "bundle": "bundles/shared.js",
            "target": "${__paths.target}"
        },
        "background": {
            "entry": "./src/background/app.ts",
            "watch": [
                "./src/background/**/*.{js,jsx,ts,tsx}"
            ],
            "bundle": "bundles/background.js",
            "target": "${__paths.target}"
        },
        "content": {
            "entry": "./src/content/page.ts",
            "watch": [
                "./src/content/**/*.{js,jsx,ts,tsx}"
            ],
            "bundle": "bundles/content.js",
            "target": "${__paths.target}"
        },
        "popup": {
            "entry": "./src/popup/popup.ts",
            "watch": [
                "./src/popup/**/*.{js,jsx,ts,tsx}"
            ],
            "bundle": "bundles/popup.js",
            "target": "${__paths.target}"
        },
        "settings": {
            "entry": "./src/settings/settings.ts",
            "watch": [
                "./src/settings/**/*.{js,jsx,ts,tsx}"
            ],
            "bundle": "bundles/settings.js",
            "target": "${__paths.target}"
        },
        "public": {
            "entry": "./src/public/support.ts",
            "watch": [
                "./src/public/**/*.{js,jsx,ts,tsx}"
            ],
            "bundle": "bundles/public.js",
            "target": "${__paths.target}"
        }
    }
}